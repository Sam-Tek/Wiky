@model Wiky.Models.Article
@{
    ViewBag.Title = "ModifierArticle";
}

<h2>Modifier Article</h2>
<p>@ViewBag.Message</p>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    @Html.HiddenFor(m => m.Id);
    @Html.HiddenFor(m => m.DateCreation);

    @Html.LabelFor(m => m.Theme);
    @Html.EditorFor(m => m.Theme);

    @Html.LabelFor(m => m.Auteur);
    @Html.EditorFor(m => m.Auteur);

    @Html.LabelFor(m => m.Contenu);
    @Html.EditorFor(m => m.Contenu);
    <input type="submit" value="Modifier" />
}
